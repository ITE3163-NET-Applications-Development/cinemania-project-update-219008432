@page
@model CineMania.Pages.Movies.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h1>Contact</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feedback.Names" class="control-label"></label>
                <input asp-for="Feedback.Names" class="form-control" />
                <span asp-validation-for="Feedback.Names" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Email" class="control-label"></label>
                <input asp-for="Feedback.Email" class="form-control" />
                <span asp-validation-for="Feedback.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.subject" class="control-label"></label>
                <input asp-for="Feedback.subject" class="form-control" />
                <span asp-validation-for="Feedback.subject" class="text-danger"></span>
            </div>
         <div class="form-group">
         <label asp-for="Feedback.message" class="control-label">
         Message:</label>
         <textarea asp-for="Feedback.message" class="form-control" rows="8" cols="25"
         placeholder="Enter Your Message Here...."></textarea>
         <br>
         <span asp-validation-for="Feedback.message" class="text-danger"></span>
         </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

